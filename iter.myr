use std

use "xml"
use "mk"
use "types"

pkg xml =
	impl iterable eventiter -> std.result(event, err)

	const byevent	:	(x : ctx# -> eventiter)
;;

impl iterable eventiter -> event =
	__iternext__ = {iterp, valp
		if !iterp.p.more
			-> false
		;;

		match dispatch((iterp : ctx#))
		| `std.Ok e:
			valp# = e
			-> true
		| `std.Err e:
			iterp.p.error = `std.Some e
			-> false
		;;
	}

	__iterfin__ = {iterp, valp
	}
;;

const byevent = {x
	-> (x# : eventiter)
}

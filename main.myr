use std
use xml

const main = {
	var x = xml.mkbuf("<testing thing=\"ztuff\" foo=\"bar\" works=\"yes\">" \
			"<this>hello world</this>" \
			"<blah><![CDATA[hello world]]></blah>" \
			"</testing><![CDATA[x")

	for event : xml.byevent(x)
		match event
		| `std.Ok `xml.Characters c:
			std.put("\"{}\"\n", c)
		| _:
			std.put("{}\n", event)
		;;
	;;

	xml.free(x)
}
